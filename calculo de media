algoritmo "Ex_41"
// Função : Calcular a média ponderada de 50 alunos
var
x,y:inteiro
avg,nt,avgp:real
inicio
// Seção de Comandos 
para x de 1 ate 50 faca
para y de 1 ate 3 faca
escreval(x,"º aluno, nota[",y," ]")
leia(nt)
se y = 1 entao
avgp<-avgp+nt*2
senao
se y = 2 entao
avgp<-avgp+nt*4
senao
avgp<-(avgp+nt*3)/10
fimse
fimse
fimpara
avg<-avg+avgp
escreval(" ")
escreval("A média é ",avgp:2:1)
se avgp >= 7 entao
escreval("Situação: Aprovado")
senao
escreval("Situação: Reprovado")
fimse
fimpara
escreval(" ")
escreval("A média geral é ",(avg/50):2:1)
fimalgoritmo
